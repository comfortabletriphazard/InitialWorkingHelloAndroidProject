                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Rating)
                                </td>
                                <td>
                            </tr>*@
                        </thead>
                        </table>
                </div>
                <a asp-controller="Review" asp-action="Create" asp-route-id="@Model.Id">
                    <button type="button" class="btn btn-warning"><b>Review Movie</b></button>
                </a>
                <p></p>
            </div>

