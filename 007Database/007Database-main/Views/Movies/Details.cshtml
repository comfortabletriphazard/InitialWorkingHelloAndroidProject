            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
        </svg>
    </a>
    <hr />
    </div>

    <div class="card shadow rounded mt-4 p-3">
        <div class="row pl-3">
            <!-- Details -->
            <div class="col-8 mt-4">
                <h3 class="mb-4">Movie Details</h3>
                <dl class="row">
                    <dt class="col-5">
                        @Html.DisplayNameFor(model => model.Title)
                    </dt>
                    <dd class="col-7">
                        @Html.DisplayFor(model => model.Title)
                    </dd>
                    <dt class="col-5">
                        @Html.DisplayNameFor(model => model.Year)
                    </dt>
                    <dd class="col-7">
                        @Html.DisplayFor(model => model.Year)
                    </dd>
                    <dt class="col-5">
                        @Html.DisplayNameFor(model => model.Director)
                    </dt>
                    <dd class="col-7">
                        @Html.DisplayFor(model => model.Director)
                    </dd>
                    <dt class="col-5">
                        @Html.DisplayNameFor(model => model.Synopsis)
                    </dt>
                    <dd class="col-7">
                        @Html.DisplayFor(model => model.Synopsis)
                    </dd>
                </dl>
            </div>

            <!-- Photo -->
            <div class="col-4">
                <img src="@Model.Photo" class="img-fluid">
            </div>
        </div>
        </div>
            <div>
                <p></p>
                <h2>Reviews</h2>
                <!--Table needs data from Review Model-->
                <div>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.ActionLink("Title", "Index", new { sortOrder = ViewBag.NameSortParm })
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Created On
                                </th>
                                <th>
                                    Comment
                                </th>
                                <th>
                                    Rating
                                </th>
                                <th></th>
                            </tr>
