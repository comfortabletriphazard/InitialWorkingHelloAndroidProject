        </svg>
    </a>
    <a asp-action="Edit" asp-route-id="@Model.Id">
        <svg xmlns="http://www.w3.org/2000/svg"
             width="24"
             height="24"
             fill="currentColor"
             class="bi bi-pencil-square"
             viewBox="0 0 16 16">
